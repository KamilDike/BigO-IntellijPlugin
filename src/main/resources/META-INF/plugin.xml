<idea-plugin>
    <id>com.github.kamildike.bigointellijplugin</id>
    <name>BigO-IntellijPlugin</name>
    <vendor>kamildike</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <notification.parentGroup
            id="notifier.notifications"
            title="Notifications" />

        <notification.group
            parentId="notifier.notifications"
            groupId="notifier.notifications.toolWindow"/>

    </extensions>

    <actions>
        <action id="PopUpBigO" text="BigO"  class="com.github.kamildike.bigointellijplugin.BigOn">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt q"/>
        </action>


    </actions>
</idea-plugin>
